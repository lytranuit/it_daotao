@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin.cshtml";
    var daotao = ViewData["daotao"];
}
<div class="row clearfix">
    <div class="col-12">
        <form method="POST" id="form" autocomplete="on" novalidate="novalidate">
            <section class="card card-fluid">
                <div class="card-header">
                    <div class="d-inline-block w-100">
                        <button type="submit" name="dangtin" class="btn btn-sm btn-primary float-right">Cập nhật</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Họ và tên:<span class="text-danger">*</span></b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="fullName" required="" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Mã số nhân viên:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="msnv" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Ngày tháng năm sinh:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='date' name="birthday" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Ngày vào làm:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='date' name="date_work" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Trình độ chuyên môn:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="education" placeholder="Tiếng việt" autocomplete="off" />
                                <input class="form-control form-control-sm mt-1" type='text' name="education_en" placeholder="Tiếng anh" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Tổ công việc:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="work_group" placeholder="Tiếng việt" autocomplete="off" />
                                <input class="form-control form-control-sm mt-1" type='text' name="work_group_en" placeholder="Tiếng anh" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Chức vụ:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' placeholder="Tiếng việt" name="position" autocomplete="off" />
                                <input class="form-control form-control-sm mt-1" type='text' placeholder="Tiếng anh" name="position_en" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Email:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='email' name="email" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <b class="col-form-label">Công việc từng trải qua:</b>
                            <div class="pt-1">
                                <div id="repeater-job-previous">
                                </div> <!--end repeter-->
                                <div class="form-group row mb-0">
                                    <div class="col-sm-12">
                                        <button class="btn btn-gradient-secondary btn-sm add_job_previouss">
                                            <span class="fa fa-plus"></span> Add
                                        </button>
                                    </div><!--end col-->
                                </div><!--end row-->
                            </div>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <b class="col-form-label">Công việc phụ trách:</b>
                            <div class="pt-1">
                                @Html.DropDownList("workgroups[]", (IEnumerable<SelectListItem>)ViewData["workgroups"], new { multiple = "true",
                                data_placeholder = "Nhóm công việc",@class="chosen form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <b class="col-form-label">Trách nhiệm công việc:</b>
                            <div class="pt-1">
                                <div id="repeater-responsibilities">
                                </div> <!--end repeter-->
                                <div class="form-group row mb-0">
                                    <div class="col-sm-12">
                                        <button class="btn btn-gradient-secondary btn-sm add_responsibilities">
                                            <span class="fa fa-plus"></span> Add
                                        </button>
                                    </div><!--end col-->
                                </div><!--end row-->
                            </div>
                        </div>
                        <div class="col-lg-6 mt-2">
                            <b class="col-form-label">Báo cáo cho:</b>
                            <div class="pt-1">
                                @Html.DropDownList("report_to[]", (IEnumerable<SelectListItem>)ViewData["employees"], new { multiple = "true",
                                data_placeholder = "Báo cáo cho",@class="chosen form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="col-lg-6 mt-2">
                            <b class="col-form-label">Người chỉ định thay thế:</b>
                            <div class="pt-1">
                                @Html.DropDownList("replace_to[]", (IEnumerable<SelectListItem>)ViewData["employees"], new { multiple = "true",
                                data_placeholder = "Báo cáo cho",@class="chosen form-control form-control-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>

        <section>
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home1" role="tab" aria-selected="true">SOP cần đào tạo</a>
                        </li>
                       
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane py-3 active" id="home1" role="tabpanel">
                            <div class="row" id="list_procedure">
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<template id="template_responsibilities">
    <div class="responsibilities row mb-2">

        <input type="hidden" name="list_responsibilities[{{key}}][employee_id]" value="{{employee_id}}" />
        <div class="col-5">
            <input name="list_responsibilities[{{key}}][content]" class="form-control form-control-sm" placeholder="Tiếng việt" value="{{content}}" />
        </div>
        <div class="col-5">
            <input name="list_responsibilities[{{key}}][content_en]" class="form-control form-control-sm" placeholder="Tiếng anh" value="{{content_en}}" />
        </div>
        <div class="col-2">
            <span class="btn btn-gradient-danger btn-sm delete_1">
                <span class="far fa-trash-alt mr-1"></span> Delete
            </span>
        </div>
    </div>
</template>

<template id="template_job_previous">
    <div class="job_previous row mb-2">
        <input type="hidden" name="list_job_previous[{{key}}][employee_id]" value="{{employee_id}}" />

        <div class="col-5">
            <input name="list_job_previous[{{key}}][content]" class="form-control form-control-sm" placeholder="Tiếng việt" value="{{content}}" />
        </div>
        <div class="col-5">
            <input name="list_job_previous[{{key}}][content_en]" class="form-control form-control-sm" placeholder="Tiếng anh" value="{{content_en}}" />
        </div>
        <div class="col-2">
            <span class="btn btn-gradient-danger btn-sm delete_2">
                <span class="far fa-trash-alt mr-1"></span> Delete
            </span>
        </div>
    </div>
</template>
<template id="template_procedure">
    <div class="col-md-4 procedure" data-id="{{id}}">
        <div class="card border">
            <div class="card-header bg-danger text-white">
                <div>
                    {{code}} - {{name}}
                    <span class="showhide-arrow"><i class="mdi mdi-chevron-down"></i></span>
                </div>
            </div>
            <div class="card-body">
                <ul class="list_version m-0">
                </ul>
            </div>
        </div>
    </div>
</template>
<template id="template_version">

    <li class="version {{^need_train}}no_need{{/need_train}}">

        {{#is_success}}
        <span class="status text-success"><i class="fas fa-check-circle"></i></span>
        {{/is_success}}
        {{^is_success}}
        <span class="status text-danger"><i class="fas fa-ban"></i></span>
        {{/is_success}}

        {{code}} - {{name}}
    </li>
</template>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script type="text/javascript">
    var data = @Html.Raw(Json.Serialize(Model));
    var daotao = @Html.Raw(Json.Serialize(daotao));
    var key_jobprevious = 0;
    var key_responsibilities = 0;
    daotao = daotao.map(function(item){
        return item['procedure_version_id'];
    });
    if (data.workgroups) {
         data.workgroups = data.workgroups.map(function(item){
            // item chính là phần tử đang lặp
            return item['workgroup_id']; // giá trị trả về sẽ thay thế cho giá trị ban đầu của phần tử
        });
    }
    if (data.report_to) {
         data.report_to = data.report_to.map(function(item){
            // item chính là phần tử đang lặp
            return item['employee_report_id']; // giá trị trả về sẽ thay thế cho giá trị ban đầu của phần tử
        });
    }
    if (data.replace_to) {
         data.replace_to = data.replace_to.map(function(item){
            // item chính là phần tử đang lặp
            return item['employee_replace_id']; // giá trị trả về sẽ thay thế cho giá trị ban đầu của phần tử
        });
    }
    if (data.responsibilities) {
        for(var item of data.responsibilities){
            item.key = key_responsibilities++;
            addresponsibilities(item);
        }
    }

    if (data.job_previous) {
        for(var item of data.job_previous){
            item.key = key_jobprevious++;
            addjobprevious(item);
        }
    }
    function addprocedure(item){
        var template = $("#template_procedure").html();
        var rendered = Mustache.render(template, item);
        $("#list_procedure").append(rendered);

        var versions = item.versions;
        for(var version of versions){
            addversion(version);
        }
    }
    function addresponsibilities(item){
        var template = $("#template_responsibilities").html();
        var rendered = Mustache.render(template, item);
        $("#repeater-responsibilities").append(rendered);
    }
    function addjobprevious(item){
        var template = $("#template_job_previous").html();
        var rendered = Mustache.render(template, item);
        $("#repeater-job-previous").append(rendered);
    }
    function addversion(item){
        var procedure_id = item.procedure_id;
        var parent = $(".procedure[data-id='"+procedure_id+"']");

        var id = item.id;
        if(daotao.indexOf(id) != -1){
            item.is_success = true;
        }

        var template = $("#template_version").html();
        var rendered = Mustache.render(template, item);
        $(".list_version",parent).append(rendered);

    }
    function check_procedure(){
        $(".procedure").each(function(){
            var last = $(".version:not(.no_need):last",$(this));
            var is_success = $(".status",last).hasClass("text-success");
            var next = last.nextAll();
            if(is_success){
                $(".status",next).removeClass("text-danger").addClass("text-success").html('<i class="fas fa-check-circle"></i></span>');
                $(".card-header",$(this)).removeClass("bg-danger").addClass("bg-success");
            }else{
                 $(".card-header",$(this)).addClass("bg-danger").removeClass("bg-success");
            }
        });
    }
    $(document).ready(function(){

        fillForm($("#form"),data);
        $("[name='workgroups[]']").change(function(){
            var val = $(this).val();
            $.ajax({
                url:"/admin/employee/getprocedurebyworkgroups",
                data:{
                    workgroups:val
                },
                type:"POST",
                dataType:"JSON",
                success:function(res){
                    if(res.success){
                        var items = res.items;
                        $("#list_procedure").empty();
                        for(var item of items){
                            var procedure = item.value.procedure;
                            addprocedure(procedure);
                        }
                        check_procedure();
                    }
                }
            })
        }).trigger("change");
        $(document).on("click",".showhide-arrow",function(){
            var parent = $(this).closest(".procedure");
            var is_hide = $(this).hasClass("arrow_hide");
            if(is_hide){
                $(this).html('<i class="mdi mdi-chevron-down"></i>');
            }else{
                $(this).html('<i class="mdi mdi-chevron-right"></i>');
            }
            $(".card-body",parent).toggleClass("d-none");
            $(this).toggleClass("arrow_hide");
        });
        $(document).on("click",".delete_1",function(){
            $(this).parents(".responsibilities").remove();
        });
        $(document).on("click",".delete_2",function(){
            $(this).parents(".job_previous").remove();
        });
        $(".add_job_previouss").click(function(e){
            e.preventDefault();
            var item = {id:0,employee_id:data.id,key:key_jobprevious++};
            addjobprevious(item);
        });
        $(".add_responsibilities").click(function(e){
            e.preventDefault();
            var item = {id:0,employee_id:data.id,key:key_responsibilities++};
            addresponsibilities(item);
        });
    })

</script>
}
