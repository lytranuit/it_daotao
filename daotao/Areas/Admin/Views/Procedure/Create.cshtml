@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row clearfix">
    <div class="col-12">
        <form method="POST" id="form-dang-tin">
            <section class="card card-fluid">
                <div class="card-header">
                    <div class="d-inline-block w-100">
                        <button type="submit" name="dangtin" class="btn btn-sm btn-primary float-right">Tạo mới</button>
                    </div>
                </div>
               
                <div class="card-body">

                    <div class="row">

                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Số SOP:<span class="text-danger">*</span></b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="code" required="" placeholder="Số SOP" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Tên SOP:<span class="text-danger">*</span></b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Tên SOP" />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
          
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
