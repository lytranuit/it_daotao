@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row clearfix">
    <div class="col-12">
        <form method="POST" id="form-dang-tin" autocomplete="on">
            <section class="card card-fluid">
                <div class="card-header">
                    <div class="d-inline-block w-100">
                        <button type="submit" name="dangtin" class="btn btn-sm btn-primary float-right">Tạo mới</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Chủ đề:<span class="text-danger">*</span></b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Chủ đề" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Mục đích:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="purpose" placeholder="Mục đích" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Thời gian đào tạo:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='date' name="date" placeholder="Thời gian đào tạo" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-3 mt-2">
                            <b class="col-form-label">Địa điểm:</b>
                            <div class="pt-1">
                                <input class="form-control form-control-sm" type='text' name="address" placeholder="Địa điểm" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <b class="col-form-label">Mã số tài liệu:</b>
                            <div class="pt-1">
                                @Html.DropDownList("procedure_versions[]", (IEnumerable<SelectListItem>)ViewData["procedure_versions"], new { multiple = "true",
                                data_placeholder = "Chọn tài liệu",@class="chosen form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <b class="col-form-label">Người tham dự:</b>
                            <div class="pt-1">
                                @Html.DropDownList("employee[]", (IEnumerable<SelectListItem>)ViewData["employee"], new { multiple = "true",
                                data_placeholder = "Chọn nhân viên",@class="chosen form-control form-control-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
